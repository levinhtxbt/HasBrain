<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"/>
        <ImageView
            android:id="@+id/imgRibbon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_watchribbon"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:visibility="invisible"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/txtTitleMovie"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Title Movie"
                android:textSize="20dp"
                android:textColor="#000000"
                android:maxLines="2"
                android:singleLine="true"
                android:ellipsize="end"
                />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgRate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_star_rating"
                android:layout_gravity="end"/>
            <TextView
                android:id="@+id/txtRate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="7.6"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Watch_Now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/imgWatch_Now"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_watch_now"
                android:layout_gravity="end"/>
            <TextView
                android:id="@+id/txtWatch_Now"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="Watch Now"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>